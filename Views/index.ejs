<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ELITES GROUP</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
</head>
<body>
  <!-- Navbar -->
  <%- include('./navbar.ejs'); %>

  <div class="container m-4">
    <div class="row" id="cardContainer">
    </div>
  </div>
  
  <script>
    async function loadData() {
      const response = await fetch('http://localhost:3000/api/v1/upload/getallImages');
      const data = await response.json();
      const cardContainer = document.getElementById('cardContainer');

      data.images.forEach(image => {
        const newCard = document.createElement('div');
        newCard.classList.add('col-4', 'm-2');
        newCard.innerHTML = `
          <div class="card" style="width: 18rem;">
            <img src="images/${image.filename}" class="card-img-top" alt="Image">
            <div class="card-body">
            
              
            </div>
          </div>
        `;
        console.log(newCard)
        cardContainer.appendChild(newCard);
      });
    }

    // Trigger data loading when the page is loaded
    window.onload = loadData;
  </script>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
</body>
</html>
